<div class="modal-wrapper" id="add-quiz-modal">
    <div class="modal">
      <a href="#" onclick="closeModal('add-quiz-modal')" class="modal-close">+</a>
      <div class="modal-title">
        <h2>Create New Quiz</h2>
      </div>
      <div class="modal-body">
        <form class="js-action" action="/quizzes" method="POST" id="add-quiz-form" enctype="multipart/form-data">
          <input type="text" placeholder="enter category name" name="title" />
          <p class="error title-error">This is error</p>
          <select name="category" id="">
            <option value="">Select categoy</option>
            <% if(categories.length > 0){
              categories.forEach(category => {%>
                <option value="<%=category.id%>"><%=category.name%></option>
            <%  })
            } %>
          </select>
          <p class="error category-error">This is error</p>
          <select name="location" id="">
            <option value="">Select District</option>
            <% if(districtList.length > 0){
              districtList.forEach(district => {%>
                <option value="<%=district%>"><%=district%></option>
            <%  })
            } %>
          </select>
          <p class="error location-error">This is error</p>
          <input type="file" name="image" />
          <p class="error image-error">This is error</p>
          <p class="error common-error">This is error</p>
          <input class="submit-button" type="submit" value="Submit" />
          <div class="loader hide">Loading...</div>
        </form>
      </div>
    </div>
  </div>